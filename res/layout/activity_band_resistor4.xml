<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BandResistor4" >

    <Spinner
        android:id="@+id/spin1Band4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:entries="@array/Resistor_Color_Band" />

    <Spinner
        android:id="@+id/spin2Band4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:entries="@array/Resistor_Color_Band" />

    <Spinner
        android:id="@+id/spinMultiply4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:entries="@array/Resistor_Color_Multiplier" />

    <Spinner
        android:id="@+id/spinTolerance4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:entries="@array/Resistor_Color_Tolerance" />

    <TextView
        android:id="@+id/txtVTotalResistance4"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="@dimen/halfPadding"
        android:text="@string/DefaultResistance"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/txtVTolerance4"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="@dimen/halfPadding"
        android:text="@string/DefaultTolerance"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>
